<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModelXml"
            type="com.soloupis.sample.segmentationandstyletransfer.fragments.segmentation.SegmentationAndStyleTransferViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.soloupis.sample.segmentationandstyletransfer.fragments.segmentation.SegmentationAndStyleTransferFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="57dp"
            android:padding="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/about"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    app:layout_constraintBottom_toTopOf="@id/imageview_input"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageview_input"
                    android:layout_width="244dp"
                    android:layout_height="244dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/colorAccent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintBottom_toTopOf="@id/frame_output"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text" />

                <FrameLayout
                    android:id="@+id/frame_output"
                    android:layout_width="254dp"
                    android:layout_height="254dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text">

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminateTint="@android:color/black"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/imageview_output"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </FrameLayout>

                <!-- TODO: Hide this for now and deal with it later with preferences -->
                <TextView
                    android:id="@+id/inference_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_horizontal"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frame_output" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewStyles"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    app:layout_constraintTop_toBottomOf="@id/inference_info"
                    android:layout_margin="2dp"
                    android:layout_marginTop="12dp"
                    android:background="#ccc"
                    android:padding="2dp" />

                <FrameLayout
                    app:layout_constraintTop_toBottomOf="@id/inference_info"
                    android:layout_width="match_parent"
                    android:layout_height="84dp">

                    <ImageView
                        android:id="@+id/style_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/styles_square_thumb" />

                    <TextView
                        android:id="@+id/choose_style_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/semi_transparent"
                        android:gravity="center"
                        android:text="@string/choose_a_style"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/imageview_styled"
                    android:layout_width="244dp"
                    android:layout_height="244dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewStyles"
                    android:scaleType="fitXY" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

